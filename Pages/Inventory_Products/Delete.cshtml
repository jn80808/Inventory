@page
@model Inventory1.Pages.Inventory_Products.Delete
@{
    ViewData["Title"] = "Delete";
}

<div class="mx-auto rounded border p-4 shadow-lg" style="width: 400px; background-color: #F3F3F3;">
    <h2 class="text-center mb-3 text-danger fw-bold">Delete Product</h2>
    <hr />
    <p class="text-center">Are you sure you want to delete this product?</p>
    <p class="text-center"><strong>Product ID:</strong> @Request.Query["ProductId"]</p>
    <hr />
    
    <form method="post" class="mt-3">
        <input type="hidden" name="ProductId" value="@Request.Query["ProductId"]" />
        <div class="row g-2">
            <div class="col-sm-6 d-grid">
                <button type="submit" class="btn delete-btn">Delete</button>
            </div>
            <div class="col-sm-6 d-grid">
                <a class="btn cancel-btn" href="/Inventory_Products/Index">Cancel</a>
            </div>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger mt-3 text-center">
            @Model.ErrorMessage
        </div>
    }
</div>