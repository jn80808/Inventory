@page
@model Inventory1.Pages.Inventory_Products.Index
@{
    ViewData["Title"] = "Product Inventory";
}

<div class="container mt-5">
    <!--Title-->
    <h2 class="text-center mb-4 fw-bold text-primary">@ViewData["Title"]</h2>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <!--Add New Product Button-->
        <a class="btn btn-warning text-dark fw-bold shadow-sm px-4 py-2" href="/Inventory_Products/Create">
            <i class="fas fa-plus-circle me-2"></i> Add New Product
        </a>

    </div>

    <div class="table-responsive shadow rounded bg-white p-3">
        <table class="table table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <!--Table Head-->
                    <th scope="col" class="text-uppercase">ID</th>
                    <th scope="col" class="text-uppercase">Product Name</th>
                    <th scope="col" class="text-uppercase">Stock</th>
                    <th scope="col" class="text-uppercase">Price</th>
                    <th scope="col" class="text-uppercase">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ProductInfoList.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="text-muted py-4 fs-5">No products available.</td>
                    </tr>
                }
                else
                {
                    @foreach (var product in Model.ProductInfoList)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td class="text-start">@product.Name</td>
                            <td class="text-end">@product.QuantityInStock</td>
                            <td class="text-end">@product.Price.ToString("C")</td>
                            <td class="d-flex justify-content-center gap-2">
                                <a class="btn btn-sm btn-outline-primary px-3" href="/Inventory_Products/Edit?id=@product.Id">
                                    <i class="fas fa-edit me-1"></i> Update
                                </a>
                                <a class="btn btn-sm btn-outline-danger px-3" href="/Inventory_Products/Delete?id=@product.Id" 
                                   onclick="return confirm('Are you sure you want to delete this product?');">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                    <tr class="table-light fw-bold">
                        <td colspan="3" class="text-end">Total Inventory Value:</td>
                        <td colspan="2" class="text-end">@Model.TotalInventoryValue.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
