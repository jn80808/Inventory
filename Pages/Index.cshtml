<section class="container my-5">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://i.pinimg.com/736x/dd/04/42/dd0442a67643722bd9cec7fefc329f18.jpg" class="d-block w-100 img-fluid rounded-lg-3 carousel-image" alt="Inventory App">
            </div>
            <div class="carousel-item">
                <img src="https://i.pinimg.com/736x/70/d8/43/70d8430a66cb97616434d7cf29c61690.jpg" class="d-block w-100 img-fluid rounded-lg-3 carousel-image" alt="Business Tools">
            </div>
            <div class="carousel-item">
                <img src="https://i.pinimg.com/736x/ea/d8/57/ead857b662ac3e83ec5ba68a31e6e373.jpg" class="d-block w-100 img-fluid rounded-lg-3 carousel-image" alt="Business Tools">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section><br>


<div class="container mt-5">
